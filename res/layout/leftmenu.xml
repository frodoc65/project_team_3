<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sell_t001"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/logo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/side_b001"
        style="android:buttonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:drawableLeft="@drawable/s01"
        android:gravity="left|center_vertical|center_horizontal"
        android:text="@string/side_b001"
        android:textColor="@drawable/black" />

    <Button
        android:id="@+id/side_b002"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:drawableLeft="@drawable/s02"
        android:gravity="left|center_vertical|center_horizontal"
        android:text="@string/side_b002"
        android:textColor="@drawable/black" />

    <Button
        android:id="@+id/side_b003"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:drawableLeft="@drawable/s03"
        android:gravity="left|center_vertical|center_horizontal"
        android:text="@string/side_b003"
        android:textColor="@drawable/black" />

    <Button
        android:id="@+id/side_b005"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:gravity="left|center_vertical|center_horizontal"
        android:text="@string/side_b005"
        android:textColor="@drawable/black" />

    <Button
        android:id="@+id/side_b004"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:drawableLeft="@drawable/s04"
        android:gravity="left|center_vertical|center_horizontal"
        android:text="@string/side_b004"
        android:textColor="@drawable/black" />

    <Button
        android:id="@+id/side_b006"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/vblue"
        android:gravity="left|center_vertical|center_horizontal"
        android:text="@string/side_b006"
        android:textColor="@drawable/white" />

</LinearLayout>